<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_baseline_location_off_24" />

            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Location is not enabled" />
            <TextView
                android:padding="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#736969"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enable device location to ensure accurate address and fastest delivery" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A9BDBD" />

            <TextView
                android:id="@+id/enablelocation"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_baseline_my_location_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Device Location" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A9BDBD" />

            <TextView
                android:id="@+id/tventerlocmanually"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Location Manually" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>